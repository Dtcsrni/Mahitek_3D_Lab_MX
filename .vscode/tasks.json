{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "🚀 Iniciar Live Server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "🎨 Compilar SASS (watch)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "watch:sass"],
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "group": "build"
    },
    {
      "label": "✅ Validar Todo",
      "type": "shell",
      "command": "npm",
      "args": ["run", "validate"],
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": "test"
    },
    {
      "label": "🔍 Lint JavaScript",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint:js"],
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": "test"
    },
    {
      "label": "💅 Formatear Todo",
      "type": "shell",
      "command": "npm",
      "args": ["run", "format"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "group": "none"
    },
    {
      "label": "🏗️ Build CSS Optimizado",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build:css"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": "build"
    },
    {
      "label": "⚡ Optimizar Proyecto",
      "type": "shell",
      "command": "npm",
      "args": ["run", "optimize"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "group": "build"
    },
    {
      "label": "📦 Git: Add, Commit & Push",
      "type": "shell",
      "command": "git",
      "args": [
        "add",
        ".",
        "&&",
        "git",
        "commit",
        "-m",
        "${input:commitMessage}",
        "&&",
        "git",
        "push"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "group": "none"
    }
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "type": "promptString",
      "description": "Mensaje del commit",
      "default": "chore: actualizar archivos"
    }
  ]
}
