{
  "name": "mahitek-3d-lab-mx",
  "version": "1.0.0",
  "description": "Landing page oficial de Mahitek 3D Lab - ImpresiÃ³n 3D funcional en PETG",
  "main": "assets/js/app.js",
  "scripts": {
    "dev": "npx live-server --port=8080 --no-browser",
    "lint:js": "eslint assets/js/**/*.js",
    "lint:css": "stylelint assets/css/**/*.css",
    "format:js": "prettier --write assets/js/**/*.js",
    "format:css": "prettier --write assets/css/**/*.css",
    "format:html": "prettier --write *.html",
    "format": "npm run format:js && npm run format:css && npm run format:html",
    "validate": "npm run lint:js && npm run lint:css",
    "watch:sass": "sass --watch assets/css/styles.scss:assets/css/styles.css",
    "build:css": "sass assets/css/styles.scss:assets/css/styles.css --style=compressed",
    "optimize": "npm run build:css && npm run format"
