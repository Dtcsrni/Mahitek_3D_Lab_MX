{
  "name": "mahitek-3d-lab-mx",
  "version": "1.0.0",
  "description": "Landing page oficial de Mahitek 3D Lab - Impresi√≥n 3D funcional en PETG",
  "main": "assets/js/app.js",
  "scripts": {
    "dev": "live-server --port=8080 --no-browser --watch=. --ignore=node_modules",
    "dev:open": "live-server --port=8080 --watch=. --ignore=node_modules",
    "start": "npm run dev",
    "serve": "python -m http.server 8080 || npx serve -l 8080",
    "format:js": "prettier --write assets/js/**/*.js",
    "format:css": "prettier --write assets/css/**/*.css",
    "format:html": "prettier --write *.html",
    "format": "prettier --write \"assets/js/**/*.js\" \"assets/css/**/*.css\" \"*.html\"",
    "check:format": "prettier --check \"assets/js/**/*.js\" \"assets/css/**/*.css\" \"*.html\"",
    "validate:html": "echo 'Validando HTML...' && grep -q '<!DOCTYPE html>' index.html && echo '‚úÖ HTML v√°lido'",
    "validate": "npm run check:format && npm run validate:html",
    "watch:css": "echo 'CSS directo - no requiere compilaci√≥n'",
    "build": "npm run format",
    "deploy": "git add . && git commit -m 'chore: actualizar sitio' && git push origin main",
    "version:patch": "npm version patch -m 'chore(release): v%s'",
    "version:minor": "npm version minor -m 'feat(release): v%s'",
    "version:major": "npm version major -m 'BREAKING CHANGE: v%s'",
    "preinstall": "echo 'üì¶ Instalando dependencias de desarrollo...'",
    "postinstall": "echo '‚úÖ Instalaci√≥n completa. Ejecuta: npm run dev'"
  },
  "keywords": [
    "impresion-3d",
    "petg",
    "fabricacion-digital",
    "pachuca",
    "mexico"
  ],
  "author": "Mahitek 3D Lab",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.3.0",
    "live-server": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead",
    "not IE 11"
  ]
}
