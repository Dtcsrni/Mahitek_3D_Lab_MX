  "author": "Mahitek 3D Lab",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^9.38.0",
    "prettier": "^3.3.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "sass": "^1.77.0",
    "live-server": "^1.2.2"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead",
    "not IE 11"
  ]
